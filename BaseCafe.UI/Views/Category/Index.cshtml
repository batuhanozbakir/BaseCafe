@using BaseCafe.BLL.DTOs
@model IEnumerable<CategoryDTO>

<h2>Categories</h2>
<a asp-action="Create" class="btn btn-primary">New Category Add</a>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Description</th>
			<th>Delete</th>
			<th>Update</th>
		</tr>

	</thead>
	<tbody>

		@foreach (var category in Model)

		{
			<tr>
				<td>@category.Id</td>
				<td>@category.Name</td>
				<td>@category.Description</td>
				<td><a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete Category</a></td>
				<td><a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning">Update Category</a></td>
			</tr>

		}
	</tbody>
</table>
